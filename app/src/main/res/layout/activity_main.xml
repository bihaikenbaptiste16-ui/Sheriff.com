<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#FF9800"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Sheriff Quiz"
        android:textAlignment="center"
        android:textColor="#130550"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Commencer"
        android:textSize="20sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Quelle était la nationalité de DIOGO JOTA ?"
        android:textAlignment="center"
        android:textColor="#500505"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Portugais"
        android:textAlignment="center"
        android:textColor="#033A01"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/Question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Quelle est la nationalité de Dukens Nazon ?"
        android:textAlignment="center"
        android:textColor="#500505"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Haïtienne"
        android:textAlignment="center"
        android:textColor="#033A01"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />



</RelativeLayout>